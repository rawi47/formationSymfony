{% extends 'base.html.twig' %}
{% block title %} Show {% endblock title %}
{% block body %}
<p>
    <a href="{{ path("product_new")}}">
        <button type="button" class="btn btn-warning">Ajouter</button>
    </a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>id</th>
            <th>nom</th>
            <th>prix</th>
            <th>type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td> <a href="{{ path("product_show",{"id": product.id })}}"> {{ product.id }} </a> </td>
            <td> {{ product.name }} </td>
            <td> {{ product.price }} </td>
            <td> {{ product.type }} </td>
            <td> 
            <a href="{{ path("product_delete",{"id": product.id })}}" onclick="return confirm('Are you sure you want to delete this item?');"><button type="button" class="btn btn-danger">Supprimer</button> </a> 

            <a href="{{ path("product_edit",{"product": product.id })}}" ><button type="button" class="btn btn-primary">Modifier</button> </a> 

            
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock body %}